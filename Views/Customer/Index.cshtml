<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Profiles</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #FFDAB9; /* New background color */
            margin: 0;
            box-sizing: border-box;
        }

        .header-title {
            font-size: 2.5rem; /* Larger font size for prominence */
            font-weight: bold; /* Bold text */
            color: #495057; /* Darker text color */
            text-align: center;
            margin-bottom: 1.5rem; /* Adjusted margin */
        }

        .table-container {
            background-color: #ffffff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        thead {
            background-color: #F5B7B1; /* Warm peach color */
            color: #ffffff;
        }

        th, td {
            padding: 15px;
            text-align: left;
            vertical-align: middle;
        }

        th {
            font-weight: bold;
            text-transform: uppercase;
            font-size: 1rem;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f4f7;
        }

        tbody tr:hover {
            background-color: #e9eef4;
            cursor: pointer;
        }

        .btn-primary, .btn-danger {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-primary:hover {
                background-color: #e55b50;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #dc3545;
                border-color: #c82333;
                transform: translateY(-2px);
            }

        .btn-group {
            display: flex;
            gap: 10px;
        }

        .btn a {
            color: #ffffff;
            text-decoration: none;
        }

            .btn a:hover {
                text-decoration: underline;
            }

        .text-center a {
            display: inline-block;
            margin-bottom: 20px;
            font-weight: bold;
            padding: 12px 24px;
            background-color: #F5B7B1; /* Updated color */
            color: #ffffff; /* Changed text color to white */
            text-decoration: none;
            border-radius: 30px;
            transition: background-color 0.3s, transform 0.3s;
        }

            .text-center a:hover {
                background-color: #F2A6A4; /* Slightly darker shade on hover */
                transform: scale(1.05);
            }

        /* Improved mobile responsiveness */
        th, td {
            font-size: 1rem;
        }

        h2 {
            font-size: 2rem;
        }

        /* Add subtle card-like spacing */
        tbody tr {
            border-bottom: 1px solid #dee2e6;
        }
    </style>
    <script>
        function confirmDelete(event) {
            if (!confirm('Are you sure you want to delete this customer?')) {
                event.preventDefault(); // Prevent form submission
            }
        }
    </script>
</head>

<body>
    <h2 class="header-title">Customer Profiles</h2>

    <!-- Move the "Add New Customer" button here -->
    <div class="text-center">
        <a href="@Url.Action("Create")" class="btn">Add New Customer</a>
    </div>

    <div class="table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)



                {
                    <tr>
                        <td>@customer.FirstName</td>
                        <td>@customer.Surname</td>
                        <td>@customer.Email</td>
                        <td class="btn-group">
                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="confirmDelete(event)">
                                <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@customer.RowKey" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Optional Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>