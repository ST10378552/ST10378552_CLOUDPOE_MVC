@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #FFDAB9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
        }

        h1 {
            font-size: 2rem;
            color: #dc3545;
            text-align: center;
            margin-bottom: 1rem;
        }

        h3 {
            font-size: 1.25rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .card {
            border-radius: 0.75rem;
            padding: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

            .card h4 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 1rem;
                color: #343a40;
            }

            .card dl dt {
                font-weight: 600;
            }

            .card dl dd {
                margin-bottom: 1rem;
            }

            .card img {
                border-radius: 0.5rem;
                max-width: 100%;
            }

        .btn {
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            margin: 0;
            border: none;
            box-shadow: none;
        }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            background-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .btn-group .btn {
            margin-right: 0.5rem;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }
    </style>
</head>

<body>
    <div class="container">
        <h1>Delete Product</h1>

        <h3>Are you sure you want to delete this product?</h3>

        <div class="card">
            <h4>@Model.ProductName</h4>
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" />
                    }
                </dd>
            </dl>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
            <input type="hidden" name="RowKey" value="@Model.RowKey" />
            <input type="hidden" name="PartitionKey" value="@Model.PartitionKey" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>

    <!-- Optional Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
